<table class="table">
 <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>memo</th>
    </tr>
  </thead>
  <tbody>
    <% @memo.each do |memo| %>
    <tr>
    <td>
      <%= link_to memo.title, memo_path(memo.id) %>
    </td>
    <td><%= memo.text %></td>
    <td>
    <% if memo.tags.present? %>
   <% memo.tags.each do |tag|  %>
    <%#= link_to "#{tag.name}(#{tag.taggings_count})", tags_path(tag.name) %>
    <%= "#{tag.name}(#{tag.taggings_count})" %>
    <% end %>
  <% else %>
  <p> 登録されているタグはありません</p>
  <% end %>
 </td>
    </tr>
    <% end %>
  </tbody>
</table>