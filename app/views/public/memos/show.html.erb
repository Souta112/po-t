<h1>Memos#show</h1>
<table class = "table">
 <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    <td>
    <%= @memo.title %>
    </td>
     <td>
    <%= @memo.text %>
    </td>
    <% if @memo.user_id == current_user.id %>
    <td><%= link_to "Edit", edit_memo_path(@memo.id), class: "btn btn-sm btn-success" %> </td>
