<div class="w-25 p-1" style="background-color: #eee;">

  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.9.0/css/all.css">

<table class="card bg-dark text-white">
  <tr>
    <td colspan="2">
      <%= attachment_image_tag user, :image, fallback: "no_image.jpg", size: '100x100' %>
    </td>
  </tr>
  <tr>
	  <th>name</th>
	  <td><%= user.name %></td>
  </tr>
  <tr>
	  <th>introduction</th>
	  <td><%= user.introduction %></td>
  </tr>
</table>

<div>
  <%= link_to edit_user_path(user)do %>
  <i class="fas fa-address-card"></i>
  編集
  <% end %>
</div>
</div>