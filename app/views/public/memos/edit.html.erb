<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      
  		<h1>Editing memo</h1>
  <%= form_with model: @memo,local:true do |f| %>
  <div class="form-group">
    <%= f.label :タイトル %>
    <%= f.text_field :title, class: 'form-control memo_title' %>
  </div>
  <div class="form-group">
    <%= f.label :メモ %>
    <%= f.text_area :text, class: 'form-control memo_text' %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
  		<%= link_to 'Show', memo_path(@memo), class: "memo_#{@memo.id}" %>
  </div>
</div>
