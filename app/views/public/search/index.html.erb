 <%= form_tag(search_index_path, method: :get) do %>
     <%= select_tag 'range' ,options_for_select([['---選択してください---', ''], ['User', '1'], ['Memo', '2']]) %>
     <%= select_tag 'search', options_for_select([["完全一致","perfect_match"], ["部分一致","partial_match"]]) %>
     <%= text_field_tag (:word) %>
     <%= submit_tag "検索" %>
     <% end %>
     <div>
   <% @tags.each do |tag| %>
      <%= link_to "#{tag.name}(#{tag.taggings_count})", tag_path(tag.name), class: "label label-default" %>
   <% end %>
</div>