<div class="container">
<div class="row">

<div class="col-sm12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h2>User info</h2>

 <%= form_with model: @user,local:true do |f| %>
 <%= f.label "Name" %><br>
 <%= f.text_field :name,class: "form form-control" %><br>

 <%= f.label "Image" %><br>
 <%#= f.attachment_field :image %><br>

  <%= f.label "Introduction" %><br>
  <%= f.text_area :introduction,class: "form form-control" %><br>
  <%= f.submit "Update User", class: "btn btn-secondary" %>
<% end %>
</div>
</div>
</div>
