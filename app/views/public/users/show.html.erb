<div class ="container px-5 px-sm-0">
<div class ="row">
<div class ="col-md-8 offset-md-1">
  <h1>詳細</h1>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>タイトル</th>
      <th>メモ</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @memo.each do |memo| %>
      <!--<% if memo.all_reads  %>　booleanのメモの見せるか見せないか-->
      <tr>
        <td>
          <%= attachment_image_tag(memo.user,:image, fallback: "no_image.jpg", size: '100x100') %>

        </td>
        <td><%= link_to memo.title, memo_path(memo.id) %></td>
        <td><%= memo.text %></td>


      </tr>
       <%end %>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>