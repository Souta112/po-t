<div class ="container px-5 px-sm-0">
<div class ="row">

<div class ="col-md-8 offset-md-1">
   <h2>ユーザー一覧</h2>
<table class="table">
 <thead>
    <tr>
      <th>写真</th>
      <th>名前</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
    <td>
      <%= attachment_image_tag user, :image, fallback: "no_image.jpg", size: '100x100' %>
    </td>
    <td>
      <%= user.name %>
    </td>
    <td>
      <%= link_to "詳細", user_path(user.id) %>
    </td>
    </tr>
    <% end %>
  </tbody>
  </table>
  </div>
  </div>
</div>